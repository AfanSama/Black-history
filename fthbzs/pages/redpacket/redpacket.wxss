/* pages/redpacket/redpacket.wxss */
page{
  height: 100%;
  min-height: 100%;
  padding: 0;
}
.view{
    width: 100%;
    height: 100%;
    background: #3c3c3c;
    position: relative;
}
.red-pk{
    width: 100%;
    justify-content: center;
    align-items: center;
    display: -webkit-flex;
    height: 100%;
}
.red-pk .contet{
    width: 100%;
    text-align: center;
    position: relative;
    font-size: 0;
    /* top: 60%; */
}
.red-pk .contet image{
  width: 100%;
  height: 735rpx;
}
.open-redpk {
    position: absolute;
    width: 100%;
    bottom: 20%;
    left: 0;
}
.red-pk .open-redpk image{
  width: 25%;
  height: 136rpx;
  animation: openRed 1.5s .75s infinite;
}
@keyframes openRed {
	from {
		transform: none
	}
	50% {
		transform: scale(1.2)
	}

	to {
		transform: none
	}
}